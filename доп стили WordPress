/* --- НАЧАЛО КАСТОМНОГО CSS ДЛЯ ФИКСИРОВАННОЙ ШИРИНЫ НА ПК --- */

@media (min-width: 992px) { /* Применять только для экранов 992px и шире (ПК). Можете изменить на 1025px или 1201px */

    /* Главный контейнер Elementor для контента страницы.
       Этот селектор нацелен на основной блок, где Elementor размещает все секции. */
    .elementor-section-wrap, /* Для некоторых старых версий или структур */
    div.elementor[data-elementor-type="wp-page"],
    div.elementor[data-elementor-type="post"], /* Для постов, если они тоже редактируются Elementor */
    div.elementor[data-elementor-type="wp-post"] { /* Альтернативный data-атрибут для постов */
        width: 1027px !important;     /* ЗАДАЙТЕ ЗДЕСЬ ЖЕЛАЕМУЮ ФИКСИРОВАННУЮ ШИРИНУ */
        max-width: 1027px !important; /* Убедитесь, что он не растягивается больше этого значения */
        margin-left: auto !important;
        margin-right: auto !important;
        float: none !important; /* На всякий случай, если есть плавающие блоки */
        box-sizing: border-box !important; /* Для корректного расчета ширины с padding/border */
    }

    /* Если вы используете шаблон "Elementor Canvas" (Холст Elementor),
       иногда бывает, что сам body нужно ограничить, но обычно селектор выше должен сработать
       на внутренний контейнер Elementor. */
    /*
    body.elementor-template-canvas {
        max-width: 1200px !important;  /* ЗАДАЙТЕ ЗДЕСЬ ЖЕЛАЕМУЮ ФИКСИРОВАННУЮ ШИРИНУ */
        /* margin: 0 auto !important; /* Этот может сломать некоторые вещи, если есть позиционирование */
    /* }
    */

    /* Чтобы предотвратить горизонтальную прокрутку, если какой-то элемент вылезает.
       Это также может скрыть легитимные горизонтальные прокрутки, если они есть. */
    body {
        overflow-x: hidden !important;
    }

    /* Дополнительно, если какие-то внутренние секции Elementor все равно пытаются растянуться.
       Обычно .elementor-section-wrap или div.elementor[...] выше должно быть достаточно. */
    .elementor-section.elementor-section-boxed > .elementor-container,
    .elementor-section.elementor-section-stretched > .elementor-container { /* Если у вас есть "растянутые" секции, но вы хотите их ограничить */
        max-width: 1027px !important; /* ЗАДАЙТЕ ЗДЕСЬ ЖЕЛАЕМУЮ ФИКСИРОВАННУЮ ШИРИНУ (ту же, что и выше) */
        margin-left: auto !important;
        margin-right: auto !important;
    }

    /* Убедимся, что контейнеры внутри секций также центрируются, если они не во всю ширину секции */
    .elementor-container {
        margin-left: auto !important;
        margin-right: auto !important;
    }
}

/* --- КОНЕЦ КАСТОМНОГО CSS ДЛЯ ФИКСИРОВАННОЙ ШИРИНЫ НА ПК --- */
